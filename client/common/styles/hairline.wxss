.hairline,
.hairline--top,
.hairline--left,
.hairline--right,
.hairline--bottom,
.hairline--top-bottom,
.hairline--surround {
  position: relative; }
  .hairline::after,
  .hairline--top::after,
  .hairline--left::after,
  .hairline--right::after,
  .hairline--bottom::after,
  .hairline--top-bottom::after,
  .hairline--surround::after {
    content: " ";
    position: absolute;
    pointer-events: none;
    box-sizing: border-box;
    -webkit-transform-origin: center;
    transform-origin: center;
    top: -50%;
    left: -50%;
    right: -50%;
    bottom: -50%;
    -webkit-transform: scale(0.5);
    transform: scale(0.5);
    border: 0 solid #EDEDED; }

.hairline--top::after {
  border-top-width: 1px; }

.hairline--left::after {
  border-left-width: 1px; }

.hairline--right::after {
  border-right-width: 1px; }

.hairline--bottom::after {
  border-bottom-width: 1px; }

.hairline--top-bottom::after {
  border-width: 1px 0; }

.hairline--surround::after {
  border-width: 1px; }
