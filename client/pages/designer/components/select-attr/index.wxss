      display: flex;
      align-items: flex-end;
      margin-left: 20rpx; }
      .attr-view .attr-contain .select-list .select-item {
        display: flex;
        align-items: center;
        margin: 0 10rpx;
        font-size: 24rpx; }
        .attr-view .attr-contain .select-list .select-item .cur {
          color: #C9B582; }
        .attr-view .attr-contain .select-list .select-item van-icon {
          margin-left: 10rpx; }
