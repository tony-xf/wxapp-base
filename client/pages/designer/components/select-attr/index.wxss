    .attr-view .attr-contain .filter-top .filter-top-vertical-line {
      display: inline-block;
      margin-right: 18rpx;
      width: 4rpx;
      height: 32rpx;
      background: #bfbfbf; }
    .attr-view .attr-contain .filter-top .filter-top-text {
      display: inline-block;
      font-size: 32rpx;
      height: 32rpx;
      line-height: 32rpx;
      color: #acacac; }
