        color: #fff;
        line-height: 54rpx; }
    .attr-view .attr-contain .field {
      padding: 18rpx 0; }
      .attr-view .attr-contain .field .label {
        font-size: 32rpx;
        margin-bottom: 20rpx; }
        .attr-view .attr-contain .field .label .red {
          margin-right: 6rpx; }
