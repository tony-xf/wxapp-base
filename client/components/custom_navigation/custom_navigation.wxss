.cu-custom .cu-bar {
    min-height: 0px;
    padding-right: 220rpx;
    box-shadow: 0rpx 0rpx 0rpx;
    z-index: 99;
}
.cu-bar {
    display: flex;
    position: relative;
    align-items: center;
    min-height: 100rpx;
    justify-content: space-between;
}
    
.cu-bar.fixed{
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 1024;
    /* box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1); */
}

.cu-custom .cu-bar .content {
    width: calc(100% - 440rpx);
}

.cu-bar .content {
    position: absolute;
    text-align: center;
    width: calc(100% - 340rpx);
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    margin: auto;
    height: 60rpx;
    font-size: 32rpx;
    line-height: 60rpx;
    cursor: none;
    pointer-events: none;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    
}

.cu-bar .action:first-child {
    margin-left: 30rpx;
    font-size: 30rpx;
}

.cu-bar .action {
    display: flex;
    align-items: center;
    height: 100%;
    justify-content: center;
    max-width: 100%;
}

.cu-bar .action image {
    width: 56rpx;
    height: 56rpx;
}

.cu-custom .cu-bar .border-custom {
	position: relative;
	border-radius: 1000rpx;
	height: 30px;
}

.cu-custom .cu-bar .border-custom::after {
	content: " ";
	width: 200%;
	height: 200%;
	position: absolute;
	top: 0;
	left: 0;
	border-radius: inherit;
	transform: scale(0.5);
	transform-origin: 0 0;
	pointer-events: none;
	box-sizing: border-box;
	border: 4rpx solid #F2F2F2;
}

.cu-custom .cu-bar .border-custom::before {
	content: " ";
	width: 4rpx;
	height: 110%;
	position: absolute;
	top: 22.5%;
	left: 0;
	right: 0;
	margin: auto;
	transform: scale(0.5);
	transform-origin: 0 0;
	pointer-events: none;
	box-sizing: border-box;
	background-color: #F2F2F2;
}

.cu-custom .cu-bar .border-custom .icon {
    
    display: flex;
    align-items: center;
    justify-content: center;
	flex: 1;
	text-align: center;
	font-size: 34rpx;
}
    
    
    
    
    
    