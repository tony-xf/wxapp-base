.confirm-modal {
  height: 100%;
  width: 750rpx;
  background-color: rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999; }
  .confirm-modal .confirm-dialog {
