        border-right: 0; }
      .confirm-modal .confirm-dialog .dialog-bottom .left-button:nth-child(2) {
        border-radius: 0; }
      .confirm-modal .confirm-dialog .dialog-bottom .right-button {
        background: linear-gradient(to right, #738cbf, #4a608e);
        color: white;
        border-bottom-right-radius: 8rpx; }
    .confirm-modal .confirm-dialog .close-button {
      z-index: 9999;
      position: absolute;
      right: 24rpx;
      top: 16rpx;
      font-size: 41rpx; }
