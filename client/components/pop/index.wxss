.notice-pop {
  width: 500rpx;
  min-height: 300rpx;
  background: #fff;
  color: #333;
  font-size: 28rpx; }

.notice-pop .title {
  font-weight: bold;
  text-align: center;
  padding: 36rpx 0 21rpx 0; }

.notice-pop .content {
  padding: 0 72rpx; }

.notice-pop .content input {
  border: 2rpx solid #f5f5f5;
  height: 70rpx;
  line-height: 70rpx; }

.notice-pop .button {
  width: 100%;
  display: flex;
  color: #fff;
  position: absolute;
  left: 0;
  bottom: 0;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center; }

.notice-pop .btn {
  color: #fff;
  flex: 1; }

.notice-pop .cancel {
  color: #101010;
  flex: 1;
  background: #fff; }

.notice-pop .confirm {
  color: #fff;
  flex: 1;
  background: #101010; }

.notice-pop button {
  border-radius: 0;
  font-size: 28rpx; }
